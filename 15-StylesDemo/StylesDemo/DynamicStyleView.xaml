<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StylesDemo.DynamicStyleView"
             Title="DynamicStyleView">

    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="greenStyle">
            <Setter Property="BackgroundColor" Value="DarkGreen"></Setter>
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <Button Text="Click me !" Style="{DynamicResource dynamicStyle}"></Button>
        <Button Text="Click me !"></Button>
        <Button Text="Chage the staly" Clicked="Button_Clicked"></Button>
        
        
    </VerticalStackLayout>
</ContentPage>