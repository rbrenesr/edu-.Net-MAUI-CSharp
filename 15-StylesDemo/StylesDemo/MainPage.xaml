<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StylesDemo.MainPage">

    <ContentPage.Resources>

       

    </ContentPage.Resources>

    <ScrollView>

        <ScrollView.Resources>
            <Style TargetType="VerticalStackLayout"></Style>
        </ScrollView.Resources>
        
        <VerticalStackLayout>

            <Button Text="LOGIN" BackgroundColor="Aqua"></Button>
            <Button Text="VISIT WEB SITE">
                <Button.Resources>
                    <Style TargetType="Button">
                        <Setter Property="BackgroundColor"
                                Value="Blue"></Setter>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Text="LOGIN" Style="{StaticResource buttonStyle}"></Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
