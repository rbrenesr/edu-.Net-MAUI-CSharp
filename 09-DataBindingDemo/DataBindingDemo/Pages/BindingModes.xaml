<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBindingDemo.Pages.BindingModes"
             Title="BindingModes">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">

        <Entry Placeholder="Source" x:Name="source" FontSize="50" Text="Inicial"></Entry>
        
        <Entry Placeholder="Source" x:Name="target" FontSize="50" 
               Text="{Binding Source={x:Reference source}, Path=Text, Mode=OneWayToSource}"></Entry>
        
    </VerticalStackLayout>
</ContentPage>