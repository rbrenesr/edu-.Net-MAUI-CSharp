<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hangman.MainPage">

    <VerticalStackLayout>
        
    </VerticalStackLayout>
    
    <Grid RowDefinitions=".6*,.4*">
        <VerticalStackLayout Spacing="10">

            <Label FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Text=""></Label>
            
            

            <Label FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Text="{Binding GameStatus}"
                   FontSize="Medium"></Label>
            
            <Image Source="{Binding CurrentImage}"
                   HorizontalOptions="Center" HeightRequest="200"></Image>


            <Label FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Text="{Binding Spotlight}"></Label>


            <Label FontAttributes="Bold"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Text="{Binding Mensaje}"></Label>
           
            <Button Text="Reset"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="100"
                    x:Name="btnResetGame"
                    Clicked="btnResetGame_Clicked">
            </Button>
            

        </VerticalStackLayout>

        <FlexLayout Grid.Row="1"
                    JustifyContent="SpaceEvenly"
                    BindableLayout.ItemsSource="{Binding Letters}"
                    Wrap="Wrap"
                    x:Name="LetterContainer">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button WidthRequest="50"
                            HeightRequest="50"                            
                            Text="{Binding .}"
                            Margin="5,5,5,15"
                            Clicked="Button_Clicked"></Button>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
    </Grid>


</ContentPage>
