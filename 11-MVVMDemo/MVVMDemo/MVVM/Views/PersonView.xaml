<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMDemo.MVVM.Views.PersonView"
             Title="PersonView">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Label Text="{Binding Person.Name}"  FontSize="50"/>

        <Slider Maximum="100" Minimum="0" Value="{Binding Person.Age}"></Slider>

        <Switch IsToggled="{Binding Person.Married}"></Switch>

        <DatePicker Date="{Binding Person.BirthDate}"></DatePicker>

        <Entry Text="{Binding Person.Weight}"></Entry>
        <TimePicker Time="{Binding Person.LunchTime}"></TimePicker>
        
    </VerticalStackLayout>
</ContentPage>