<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMDemo.MVVM.Views.CommandsView"
             Title="CommandsView">
    <VerticalStackLayout>
        <Button Text=" Click Me!"
                Command="{Binding ClickCommand}"></Button>

        <SearchBar Text="{Binding SearchTerm}"
                   SearchCommand="{Binding SearchCommand}"></SearchBar>

        <SearchBar x:Name="searchBar"
                   SearchCommand="{Binding SearchCommand2}"
                   SearchCommandParameter="{Binding Source={x:Reference searchBar},Path=Text}"></SearchBar>


    </VerticalStackLayout>
</ContentPage>